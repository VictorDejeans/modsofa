{
  "format_version": "1.21.50",
  "minecraft:block": {
    "description": {
      "identifier": "furniture:modbench",
      "menu_category": {
        "category": "construction",
        "group": "itemGroup.name.furniture"
      },
      "traits": {
        "minecraft:placement_direction": {
          "enabled_states": ["minecraft:cardinal_direction"]
        }
      }
    },
    "components": {
      "minecraft:geometry": "geometry.modbench",
      "minecraft:custom_components": ["furniture:bench_connector"],
      
      "minecraft:collision_box": {
        "origin": [-8, 0, -8],
        "size": [16, 8, 16]
      },
      "minecraft:selection_box": {
        "origin": [-8, 0, -8],
        "size": [16, 8, 16]
      },
      
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 0.5
      },
      "minecraft:destructible_by_explosion": {
        "explosion_resistance": 15
      },
      
      "minecraft:friction": 0.45,
      
      "minecraft:flammable": {
        "flame_odds": 5,
        "burn_odds": 20
      },
      
      "minecraft:material_instances": {
        "*": {
          "texture": "modbench",
          "render_method": "opaque"
        }
      },
      
      "minecraft:map_color": "#8B4513"
    },
    
    "states": {
      "bench:module": ["left", "chair", "right", "standalone"]
    },
    
    "permutations": [
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 180, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 0, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 90, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 270, 0]
          }
        }
      },
      
      {
        "condition": "q.block_state('bench:module') == 'left'",
        "components": {
          "minecraft:geometry": {
            "identifier": "geometry.modbench",
            "bone_visibility": {
              "left": true,
              "chair": false,
              "right": false
            }
          }
        }
      },
      {
        "condition": "q.block_state('bench:module') == 'chair'",
        "components": {
          "minecraft:geometry": {
            "identifier": "geometry.modbench",
            "bone_visibility": {
              "left": false,
              "chair": true,
              "right": false
            }
          }
        }
      },
      {
        "condition": "q.block_state('bench:module') == 'right'",
        "components": {
          "minecraft:geometry": {
            "identifier": "geometry.modbench",
            "bone_visibility": {
              "left": false,
              "chair": false,
              "right": true
            }
          }
        }
      },
      {
        "condition": "q.block_state('bench:module') == 'standalone'",
        "components": {
          "minecraft:geometry": {
            "identifier": "geometry.modbench",
            "bone_visibility": {
              "left": true,
              "chair": true,
              "right": true
            }
          }
        }
      }
    ]
  }
}
